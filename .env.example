# ============================================
# MAdef (MÃ£os Amigas) - Environment Variables
# ============================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# ---- Core ----
NODE_ENV=development
# PostgreSQL (production/default):
DATABASE_URL=postgresql://madef:password@localhost:5432/madef
# SQLite (legacy/dev-only): DATABASE_URL=file:./dev.db

# ---- NextAuth ----
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
# Public-facing URL of the application
NEXT_PUBLIC_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ---- Admin Credentials ----
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production

# ---- Role-Based Access (comma-separated emails) ----
ADMIN_EMAILS=admin@example.com
SUPERVISOR_EMAILS=
FINANCEIRO_EMAILS=
RH_EMAILS=
OPERADOR_EMAILS=
LEITURA_EMAILS=

# ---- WhatsApp Bridge ----
WA_BRIDGE_HOST=127.0.0.1
WA_BRIDGE_PORT=3001
WA_BRIDGE_URL=http://127.0.0.1:3001
WA_BRIDGE_PORT_FILE=.wa-bridge-port
WA_SESSION_FILE=.wa-session.json
WA_STANDALONE=false
WA_WEBHOOK_SECRET=
WHATSAPP_WEBHOOK_SECRET=
WHATSAPP_ALLOWED_ORIGINS=
WHATSAPP_WEBHOOK_MAX_AGE_SECONDS=300

# ---- WhatsApp Circuit Breaker ----
WA_CIRCUIT_FAILURE_THRESHOLD=5
WA_CIRCUIT_OPEN_MS=30000

# ---- Notifications ----
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMERGENCY_NOTIFICATION_EMAIL=

# ---- Enterprise Pricing ----
ENTERPRISE_PRICING_ENABLED=false
ENTERPRISE_PRICING_ENABLED_UNITS=
ENTERPRISE_PRICING_DISABLED_UNITS=

# ---- Feature Flags ----
USE_MOCK_DB=false
USE_MEMORY_STATE=false
SIGNATURE_PROVIDER=mock
